{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": "*",
      "Action": "cloudwatch:*",
      "Resource": "arn:aws:cloudwatch:${region}:${account_id}:*"
    },
    {
      "Effect": "Allow",
      "Principal": "*",
      "Action": "${service_name}:*",
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:ResourceOrgID": "${aws:PrincipalOrgID}"
        }
      }
    }
  ]
}
