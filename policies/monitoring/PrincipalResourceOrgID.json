{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Principal": "*",
        "Action": "cloudwatch:*",
        "Resource": "arn:aws:cloudwatch:${region}:${ACCOUNT_ID}:*"
      },
      {
        "Effect": "Allow",
        "Principal": "*",
        "Action": "${service_name}:*",
        "Resource": "*",
        "Condition": {
          "StringEquals": {
            "aws:ResourceOrgID": "${ORG_ID}",
            "aws:PrincipalOrgID": "${ORG_ID}"
          }
        }
      }
    ]
}
